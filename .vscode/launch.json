{
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch ESLint",
            "program": "${workspaceFolder}/node_modules/.bin/eslint",
            "args": [
                "--fix",
                "src/**/*.{js,ts,jsx,tsx}"
            ],
            "runtimeExecutable": "npx",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}